<Window WindowStartupLocation="CenterScreen"
        x:Class="MultiType.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MultiType" Height="250" Width="250"
        ResizeMode="NoResize">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="..\Resources\RoundedButton.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Button Name="HostBtn" Content="Host Game" HorizontalAlignment="Left" Margin="20,90,0,0" VerticalAlignment="Top" Width="75" Click="Host_Click" Style="{DynamicResource RoundedButton}"/>
        <Button Name="JoinBtn" Content="Join Game" HorizontalAlignment="Left" Margin="145,90,0,0" VerticalAlignment="Top" Width="75" Click="Join_Click" Style="{DynamicResource RoundedButton}"/>
        <Button Name="CloseBtn" Content="Close" HorizontalAlignment="Left" Margin="85,142,0,0" VerticalAlignment="Top" Width="75" Click="Close_Click" Style="{DynamicResource RoundedButton}"/>
        <Button Name="SinglePlayer" Content="Single Player" HorizontalAlignment="Left" Margin="85,45,0,0" VerticalAlignment="Top" Width="75" Click="SinglePlayer_Click" Style="{DynamicResource RoundedButton}"/>

    </Grid>
</Window>
