<Window x:Class="TypingGame.MiniLessonSelect"
        WindowStartupLocation="CenterScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Choose Next Lesson" Height="600" Width="800"
        ResizeMode="NoResize">
    <Grid>
        <Grid Name="LessonContentGrid">
            <ComboBox HorizontalAlignment="Left" Margin="43,10,0,0" VerticalAlignment="Top" Width="179" ItemsSource="{Binding LessonNames}" SelectedIndex="{Binding SelectedLessonIndex}" Height="22" RenderTransformOrigin="0.5,0.5" >
                <ComboBox.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-0.121"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </ComboBox.RenderTransform>
            </ComboBox>
            <Button Name="Choose" Content="Choose Lesson" HorizontalAlignment="Left" Margin="674,10,0,0" VerticalAlignment="Top" Width="91" Click="Choose_Click" Height="22"/>
            <Grid>
                <ScrollViewer  VerticalScrollBarVisibility="Auto" Margin="20,54,32,10">
                    <TextBlock TextWrapping="Wrap" Text="{Binding LessonString}"/>
                </ScrollViewer>
            </Grid>
        </Grid>

    </Grid>
</Window>
