<Window x:Class="MultiType.ClientConnect"
        WindowStartupLocation="CenterScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Connect to a Host" Height="300" Width="300"
        ResizeMode="CanMinimize">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="..\Resources\RoundedButton.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Label Content="IP Address:"></Label>
        <TextBox PreviewTextInput="IP_PreviewTextInput" HorizontalAlignment="Left" Height="23" Margin="84,4,0,0" TextWrapping="Wrap" Text="{Binding IPAddress, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="186"/>
        <Label Content="Port Number:" HorizontalAlignment="Left" Margin="0,37,0,0" VerticalAlignment="Top"/>
        <TextBox PreviewTextInput="Port_PreviewTextInput" HorizontalAlignment="Left" Height="23" Margin="84,40,0,0" TextWrapping="Wrap" Text="{Binding PortNumber, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="186"/>
        <Button Name="ConnectBtn" Content="Connect" HorizontalAlignment="Left" Margin="10,229,0,0" VerticalAlignment="Top" Width="75" Click="Connect_Click" Style="{DynamicResource RoundedButton}"/>
        <Button Name="CancelBtn" Content="Cancel" Margin="195,229,0,0" VerticalAlignment="Top" Click="Cancel_Click" HorizontalAlignment="Left" Width="75" Style="{DynamicResource RoundedButton}"/>
        <CheckBox Name="ConnectionEstablished" Visibility="Hidden" Content="" IsChecked="{Binding ConnectionEstablished}" HorizontalAlignment="Left" Margin="101,229,0,0" VerticalAlignment="Top" Checked="ConnectionEstablished_Checked"/>
        <TextBlock Foreground="Red" HorizontalAlignment="Left" Margin="10,68,0,0" TextWrapping="Wrap" Text="{Binding InputError}" VerticalAlignment="Top" Height="156" Width="260"/>
    </Grid>
</Window>
